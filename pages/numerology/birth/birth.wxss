page {
  background: #444;
  font-size: 14px/1.2;
}

.birth-calculator {
  width: 100%;
  display: flex;
  flex-direction: column;
}

[data-weui-theme=dark] .birth-calculator {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.birth-calculator__date-input-area {
  text-align: center;
  padding-top: 30px;
}

.birth-calculator__date-input-area input {
  color: black;
}

.birth-calculator__date-input-area .p {
  padding: 0 0 8px;
  font-size: 1.3em;
  color: #fc0
}

.birth-calculator__date-input-area input {
  height: 50px;
  font-size: 18px;
  border: 1px solid #444;
  border-radius: 5px;
  margin: 0 6%;
  box-sizing: border-box;
  background-color: #fff;
}

.birth-calculator__btn-area {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  padding: 10px 50px;
}

.birth-calculator__result {
  margin: 10px;
}

[data-weui-theme=dark] .birth-calculator__result {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.weui-cell__default {
  border-left: 10px solid #666666;
}

[data-weui-theme=dark] .weui-cell__default {
  border-left: 10px solid #dddddd;
}

.weui-cell__highlight {
  border-left: 10px solid #07c160;
}

