/* pages/counter/baby-counter/baby-counter.wxss */
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0)
}

.date-space {
  padding-top: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.date {
  text-align: left;
  align-items: center;
  font-size: 1.1764705882352942rem;
  font-weight: 400;
}

.date-space__btn {
  width: 30px;
  height: 30px;
  border: 1px solid black;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

[data-weui-theme=dark] .date-space__btn {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.date-space__btn-hover {
  background-color: grey;
}

.date-space__img {
  width: 20px;
  height: 20px;
}

.baby-daily-records {
  padding: 20px 0;
}

.baby-daily-records__item {
  margin: 10px 0;
  background-color: var(--weui-BG-2);
  border-radius: 2px;
  overflow: hidden
}

.baby-daily-records__item:first-child {
  margin-top: 0px
}

.baby-daily-records__item-hd {
  padding: 20px;
  -webkit-transition: opacity .3s;
  transition: opacity .3s
}

.baby-daily-records__item-hd_show {
  opacity: .4
}

.baby-daily-records__item-bd {
  height: 0;
  overflow: hidden
}

.baby-daily-records__item-bd_show {
  height: auto
}

.baby-daily-records__img {
  width: 30px;
  height: 30px;
}

.baby-daily-records-detail {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  margin: 0 3px;
}

.baby-daily-records-detail__time {
  color: darkgrey;
}

.baby-daily-records-detail__note {
  display: flex;
  align-items: center;
}

.baby-daily-records-detail__note-img {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

[data-weui-theme=dark] .baby-daily-records-detail__note-img {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.baby-daily-records-detail__note-btn {
  width: 56px;
  height: 20px;
  color: darkblue;
}

.baby-daily-records-detail__img {
  width: 30px;
  height: 30px;
}

[data-weui-theme=dark] .baby-daily-records-detail__img {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.baby-daily-records__option {
  width: 30px;
  height: 30px;
}

[data-weui-theme=dark] .baby-daily-records__option {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.export-btn-hover {
  background-color: silver;
}

.btn-space {
  display: block;
  text-align: center;
}

.btn-space-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.weui-btn {
  margin: 10px 0 0 0;
  display: flex;
  align-items: center;
  justify-content: center;

  /* !important 规则用于增加样式的权重。使用一个 !important 规则时，此声明将覆盖任何其他声明。不仅仅包含 width 的声明 
   * 使用 !important 是一个坏习惯，应该尽量避免，只有在需要覆盖全站或外部 CSS 的特定页面中使用 !important 
   * 此处限制当前页面，所有 weui-btn 元素的宽度为 100%
   */
  width: 100% !important;
}

/* 修改默认的 weui-btn 前有 weui-btn 时的样式 */
.weui-btn+.weui-btn {
  margin-top: 10px;
}

[data-weui-theme=dark] .weui-btn {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.btn-mini {
  /* !important 强制定义宽度 */
  width: 160px !important;
}

/* 分隔线 */
.hr {
  width: 100%;
  height: 3px;
  margin-top: 60rpx;
  background-color: #777777;
}

[data-weui-theme=dark] .hr {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.import-dialog {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(88, 88, 88, 0.7);
  backdrop-filter: blur(2px);
  display: flex;
  flex-direction: column;
  padding: 20px;
}

.import-dialog__input-area {
  margin: 20px 0;
}

.weui-textarea {
  height: 300px;
}

.import-dialog__btn-area {
  display: block;
}

.import-dialog__btn-area button {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.import-dialog__btn-area-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}